{
  "name": "yapa-api",
  "version": "1.0.0",
  "description": "Backend services written with nodejs",
  "scripts": {
    "build": "tsc --rootDir ./src/",
    "start": "cross-env NODE_ENV=development ts-node src/index.ts",
    "start:prod": "cross-env NODE_ENV=production node build/index.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "debug": "ts-node src/index.ts"    
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yasinmalli/yapa-api.git"
  },
