  "bugs": {
    "url": "https://github.com/yasinmalli/yapa-api/issues"
  },
  "homepage": "https://github.com/yasinmalli/yapa-api#readme",
  "dependencies": {
    "config": "^3.0.1",
    "guid-typescript": "^1.0.9",
    "js-yaml": "^3.12.1",
    "json2typescript": "^1.0.6",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-logger": "^3.2.0",
    "koa-requestid": "^2.0.1",
    "koa-router": "^7.4.0",
    "nodemon": "^1.18.10",
    "pg": "^7.8.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.12",
